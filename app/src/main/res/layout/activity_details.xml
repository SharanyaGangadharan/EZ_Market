<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/frag">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:padding="10dp"
        android:textColor="#000"
        android:textSize="15dp"
        android:textStyle="bold"
        android:layout_below="@+id/image"
        android:layout_alignParentStart="true" />

    <ImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="238dp"
        android:layout_gravity="top"
        android:scaleType="fitCenter"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/user_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="2dp"
        android:textSize="10dp"
        android:textStyle="bold"
        android:text="Text"
        android:textColor="@color/black"
        android:layout_marginTop="8dp"
        android:layout_below="@+id/textView4"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/user_loc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="2dp"
        android:textSize="10dp"
        android:text="Text"
        android:textAlignment="textStart"
        android:textColor="@color/grey_600"
        android:layout_below="@+id/user_name"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/prod_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Prod_Title"
        android:layout_below="@+id/user_loc"
        android:layout_alignParentStart="true"
        android:layout_marginTop="8dp" />

    <TextView
        android:id="@+id/prod_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/prod_title"
        android:text="Prod_Desc" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Seller Info"
        android:layout_below="@+id/title"
        android:layout_alignParentStart="true"
        android:layout_marginTop="11dp" />

    <Button
        android:id="@+id/make_offer"
        android:layout_width="175dp"
        android:layout_height="35dp"
        android:layout_marginTop="28dp"
        android:textColor="@color/white"
        android:background="@drawable/custom_ok"
        android:text="Make Offer"
        android:layout_below="@+id/prod_desc"
        android:layout_alignParentEnd="true" />

    <Button
        android:id="@+id/chat"
        android:layout_width="175dp"
        android:layout_height="35dp"
        android:text="Chat with Seller"
        android:background="@drawable/custom_button"
        android:layout_alignTop="@+id/make_offer"
        android:layout_alignParentStart="true" />


</RelativeLayout>